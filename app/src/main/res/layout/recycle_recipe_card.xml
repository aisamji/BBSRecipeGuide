<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RecipeCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RecipeCard.Holder"
        >

        <TextView
            android:id="@+id/recipe_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RecipeCard.Result"
            android:text="Apple Bottom"/>

        <TextView
            android:id="@+id/recipe_ingredients"
            android:layout_below="@id/recipe_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RecipeCard.Ingredients"
            android:text="Apple Bottom, Apple Bottom"/>

        <TextView
            android:id="@+id/recipe_success"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RecipeCard.Success"
            android:text="100%"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
